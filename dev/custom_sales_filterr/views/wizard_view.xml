<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_filter_wizard_form" model="ir.ui.view">
        <field name="name">sale.filter.wizard.form</field>
        <field name="model">sale.filter.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="user_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_apply_filter" string="Apply Filter" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
